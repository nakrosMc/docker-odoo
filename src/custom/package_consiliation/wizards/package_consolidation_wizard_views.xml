<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="package_consolidation_wizard_view_form" model="ir.ui.view">
        <field name="name">package.consolidation.wizard.form</field>
        <field name="model">package.consolidation.wizard</field>
        <field name="arch" type="xml">
            <form>
                <p>Se han detectado los siguientes grupos de productos para consolidar en paquetes.</p>
                <field name="picking_id" invisible="1"/>
                <field name="line_ids" nolabel="1">
                    <tree editable="bottom">
                        <field name="package_type"/>
                        <field name="move_line_ids" widget="many2many_tags"/>
                    </tree>
                </field>
                <footer>
                    <button name="action_apply_consolidation" string="Aplicar Paquetes" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>