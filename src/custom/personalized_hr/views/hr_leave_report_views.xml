<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_leave_view_graph_by_motive" model="ir.ui.view">
        <field name="name">hr.leave.view.graph.by.motive</field>
        <field name="model">hr.leave</field>
        <field name="arch" type="xml">
            <graph string="Análisis de Ausencias por Motivo" stacked="True">
                <field name="motive_id" type="row"/>
                <field name="number_of_days" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="hr_leave_action_report_by_motive" model="ir.actions.act_window">
        <field name="name">Análisis por Motivo</field>
        <field name="res_model">hr.leave</field>
        <field name="view_mode">graph,pivot,tree,calendar,form</field>
        <field name="domain">[('state', '=', 'validate')]</field> <field name="context">{'search_default_group_by_motive': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No se encontraron ausencias para analizar.
            </p><p>
                Este reporte muestra la duración de las ausencias agrupadas por el motivo especificado.
            </p>
        </field>
    </record>
</odoo>