<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_view_form_inherit_promo" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit.promo</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <div>
                    <field name="is_special_promotion"/>
                    <label for="is_special_promotion"/>
                </div>
            </xpath>
            <field name="list_price" position="after">
                <field name="original_price" invisible = "original_price == 0"/>
            </field>
        </field>
    </record>
</odoo>